@model BlogWeb.Models.Dto.PostCreateDTO;

<!-- Display general errors -->
@if (ViewData.ModelState.ErrorCount > 0)
{
	<div class="alert alert-danger">
		<ul>
			@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
			{
				<li>@error.ErrorMessage</li>
			}
		</ul>
	</div>
}

<div class="card">
	<div class="card-header">
		<div class="card-title">Create Post</div>
	</div>
	<form method="post" asp-controller="Category" asp-action="Create" class="form-control">
		<div class="card-body">
			<div class="form-group">
				<label asp-for="Title"></label>
				<input type="text" asp-for="Title" class="form-control" id="Name" placeholder="Name.. ">
			</div>
			<div class="form-group">
				<label asp-for="Content"></label>
				<textarea type="text" asp-for="Content" class="form-control" id="Content" placeholder="Content.. "> </textarea>
			</div>
			<div class="form-group">
				<label class="form-label">Category</label>
				<select class="form-select">
					<option>-----</option>
				</select>
			</div>
		</div>
		<div class="card-action">
			<button type="submit" class="btn btn-success">Create Post</button>
			<a asp-controller="Post" asp-action="Index" class="btn btn-light">Back</a>
		</div>
	</form>
</div>