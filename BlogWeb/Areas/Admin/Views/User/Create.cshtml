@model BlogWeb.Models.VM.UserCreateVM;

<div class="card">
	<div class="card-header">
		<div class="card-title">Delete User</div>
	</div>
	<form method="post" asp-controller="User" asp-action="Create" class="form-control">
		<div class="card-body">
			<div class="form-group">
				<label asp-for="UserDTO.UserName"></label>
				<input type="text" asp-for="UserDTO.UserName" class="form-control form-control" id="Username" placeholder="Username.. ">
			</div>
			<div class="form-group">
				<label asp-for="UserDTO.Email"></label>
				<input type="text" asp-for="UserDTO.Email" class="form-control form-control" id="Email" placeholder="Email.. ">
			</div>
			<div class="form-group">
				<label asp-for="UserDTO.Email"></label>
				<input type="password" asp-for="UserDTO.HashPassword" class="form-control form-control" id="Email" placeholder="Password.. ">
			</div>
			<div class="form-group">
				<label asp-for="UserDTO.Role"></label>
				<select asp-for="UserDTO.Role" asp-items="@Model.Roles" class="form-select">
					<option disabled selected>-- Select Role --</option>
				</select>
				@* <input type="text" asp-for="UserDTO.Role" class=" form-control form-control" id="Role" placeholder="Role.. "> *@
			</div>
		</div>
		<div class="card-action">
			<button type="submit" class="btn btn-success">Create User</button>
			<a asp-controller="User" asp-action="Index" class="btn btn-light">Back</a>
		</div>
	</form>
</div>